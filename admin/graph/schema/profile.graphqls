type Profile {
    lock: Lock!
    address: String!
    name: SetName
    profile: SetProfile
    pic: SetPic
    following(start: Int): [Follow]
    followers(start: Int): [Follow]
    posts(start: Int, newest: Boolean): [Post]
    rooms(start: Int): [RoomFollow!]
}

type SetName {
    tx: Tx!
    tx_hash: String!
    lock: Lock!
    address: String!
    name: String!
}

type SetProfile {
    tx: Tx!
    tx_hash: String!
    lock: Lock!
    address: String!
    text: String!
}

type SetPic {
    tx: Tx!
    tx_hash: String!
    lock: Lock!
    address: String!
    pic: String!
}

type Follow {
    tx: Tx!
    tx_hash: String!
    lock: Lock!
    address: String!
    follow_lock: Lock!
    follow_address: String!
    unfollow: Boolean!
}

type Post {
    tx: Tx!
    tx_hash: String!
    lock: Lock!
    address: String!
    text: String!
    likes: [Like!]
    parent: Post
    replies: [Post!]
    room: Room
}

type Like {
    tx: Tx!
    tx_hash: String!
    lock: Lock!
    address: String!
    post_tx_hash: String!
    post: Post
    tip: Int64
}
